	$post_id = "0123456789"; // ID Ð¿Ð¾ÑÑ‚Ð°. ÐŸÑ€Ð¸Ð¼ÐµÑ€: vk.com/wall220353117_2584, Ð²Ð²Ð¾Ð´Ð¸Ð¼ Ñ‚Ð¾ Ñ‡Ñ‚Ð¾ Ð¿Ð¾ÑÐ»Ðµ _, Ñ‚Ð¾ ÐµÑÑ‚ÑŒ 2584
	
	$friends = by("friends.get?v=5.8&fields=sex&access_token=".$token);
